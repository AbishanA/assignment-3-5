<div>
    <h1> Register </h1><br>
    {{#if errorMsg}}
        <h5 id="error">{{errorMsg}}</h5>
    {{else}}
        <h5 id="invalid">Please register below</h5>
    {{/if}}
    <form method="POST" action="./register">
        <label for="firstName"> First Name </label><br>
        <input type="text" id="fname" placeholder="First Name" name="fn"><br><br>

        <label for="lastName"> Last Name </label><br>
        <input type="text" id="lname" placeholder="Last Name" name="ln"><br><br>

        <label for="email"> Email </label><br>
        <input type="email" id="email" placeholder="Email Address" name="mail"><br><br>

        <label for="password"> Password </label><br>
        <input type="password" id="pass" placeholder="Password" name="pass"><br><br>

        <input type="submit" value="Sign Up" class="buttonpink">
    </form>
</div>