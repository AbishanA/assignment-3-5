<section id="review">
    <div id="shipping">
        <h3>Contact Information</h3>
        {{user.firstName}} {{user.lastName}} {{user.email}}
        <h3>Shipping Address</h3>
        <form method="POST" action="/review">
            <input type="text" name="first" placeholder="First Name">
            <input type="text" name="last" placeholder="Last Name"><br><br>
            <input type="text" name="company" placeholder="Company (optional)"><br><br>
            <input type="text" name="address" placeholder="Address"><br><br>
            <input type="text" name="address2" placeholder="Apartment, suite, etc. (optional)"><br><br>
            <input type="text" name="city" placeholder="City"><br><br>
            <select name="country">
                <option value="Canada">Canada</option>
            </select><br><br>
            <select name="province" id="">
                <option value="ontario">Ontario</option>
                <option value="manitoba">Manitoba</option>
                <option value="alberta">Alberta</option>
            </select><br><br>
            <input type="text" name="phone" placeholder="Phone"><br><br>
            <input type="submit" class="buttonpink" value="Continue to shipping">
        </form>
    </div>
    <div id="total">
        <h5>Weight Loss Package</h5>
        <h5>$159.99</h5>
        <h6>Subtotal</h6>
        <h6>159.99</h6>
        <h6>Shipping</h6>
        <h6>Calculated at next step</h6>
        <p>Total $159.99</p>
    </div>
</section>